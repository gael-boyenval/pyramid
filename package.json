{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0",
    "remark": "^12.0.0"
  },
  "scripts": {
    "postinstall": "lerna link",
    "prebuild": "run-p tsc lint",
    "build": "lerna run --parallel 'build:es'",
    "build:old": "lerna exec --parallel 'BABEL_ENV=build babel src --root-mode upward --out-dir dist --source-maps --extensions .ts,.tsx --delete-dir-on-start --no-comments'",
    "postbuild": "yarn build:declarations",
    "commit": "git-cz",
    "fix": "run-p -c 'lint:* --fix'",
    "lint:ts": "eslint 'packages/**/*.ts{,x}'",
    "lint": "run-p -c lint:*",
    "prerelease": "yarn build",
    "release": "lerna publish",
    "test": "lerna run --parallel 'test'",
    "tsc": "tsc",
    "babel-watch": "lerna run --parallel 'build:es:watch'",
    "build:declarations": "lerna run --parallel 'build:declaration'"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/runtime-corejs3": "^7.6.0",
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.4.6",
    "@types/stylelint": "^9.10.1",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.0.2",
    "commitizen": "^3.0.2",
    "cz-lerna-changelog": "^2.0.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "jest": "^25.5.4",
    "jest-preset-stylelint": "^3.0.0",
    "lerna": "^3.4.0",
    "moment": "^2.22.2",
    "npm-run-all": "^4.1.3",
    "plop": "^2.6.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "stylelint": "^13.3.3",
    "ts-jest": "^25.0.0",
    "ts-loader": "^7.0.4",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.0.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
